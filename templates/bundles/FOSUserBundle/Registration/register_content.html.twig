{% trans_default_domain 'FOSUserBundle' %}

<div class="container" align="center">
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-signin'}}) }}
      <img class="mb-4" src="https://symfony.com/images/logos/sf-positive.svg" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>   
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'placeholder': 'form.email', 'class': 'form-control mb-1'} }) }}
    {{ form_errors(form.username) }}
    {{ form_widget(form.username, {'attr': {'placeholder': 'form.username', 'class': 'form-control mb-1'} }) }}
    {{ form_errors(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'form.password', 'class': 'form-control mb-1'} }) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'form.password_confirmation'} }) }}
    <div>
        <input type="submit" class="btn btn-lg btn-dark btn-block" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
</div>